<h1>Listado personal</h1>

    <%= form_tag personals_path, :method => 'get' do %>
    <% content_tag :label do %>
    Buscar Placa vehiculo:
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
   
    <% end %>
    <% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Cedula</th>
      <th>Centro</th>
      <th>Email</th>
      <th>Vehiculo</th>
      <th>Marca vehiculo</th>
      <th>Placa</th>
      <th>Color vehiculo</th>
      <th>Telefono sena</th>
      <th>Telefono ip</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.nombres %></td>
        <td><%= personal.apellidos %></td>
        <td><%= personal.cedula %></td>
        <td><%= personal.centro.nombre %></td>
        <td><%= personal.email %></td>
        <td><%= mostrar_vehiculo(personal.vehiculo) %></td>
        <td><%= personal.placa %></td>
        <td><%= personal.color_vehiculo %></td>
        <td><%= personal.telefono_sena %></td>
        <td><%= personal.telefono_ip %></td>
        <td><%= personal.celular %></td>
        <td><%= link_to 'Mostrar', personal %></td>
        <td><%= link_to 'Editar', edit_personal_path(personal) %></td>
        <td><%= link_to 'Eliminar', personal, method: :delete, data: { confirm: 'ESTAS SEGURO?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn btn-info">

<%= link_to 'Nuevo Personal', new_personal_path %><br>

</div>

