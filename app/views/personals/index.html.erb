<h1>Listing personals</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Cedula</th>
      <th>Email</th>
      <th>Vehiculo</th>
      <th>Marca vehiculo</th>
      <th>Placa</th>
      <th>Color vehiculo</th>
      <th>Telefono sena</th>
      <th>Telefono ip</th>
      <th>Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personals.each do |personal| %>
      <tr>
        <td><%= personal.nombres %></td>
        <td><%= personal.apellidos %></td>
        <td><%= personal.cedula %></td>
        <td><%= personal.email %></td>
        <td><%= mostrar_vehiculo(personal.vehiculo) %></td>
        <td><%= personal.marca_vehiculo %></td>
        <td><%= personal.placa %></td>
        <td><%= personal.color_vehiculo %></td>
        <td><%= personal.telefono_sena %></td>
        <td><%= personal.telefono_ip %></td>
        <td><%= personal.celular %></td>
        <td><%= link_to 'Show', personal %></td>
        <td><%= link_to 'Edit', edit_personal_path(personal) %></td>
        <td><%= link_to 'Destroy', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

